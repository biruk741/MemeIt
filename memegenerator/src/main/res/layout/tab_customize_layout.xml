<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:columnCount="4"
        app:rowCount="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Margin"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Margin Left"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Margin Top"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Margin Right"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Margin Bottom"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Background Color"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="5" />


        <CheckBox
            android:id="@+id/all_margin_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="200"
            app:layout_column="3"
            app:layout_gravity="center_vertical"
            app:layout_row="0" />

        <SeekBar
            android:id="@+id/margin_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="200"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center_vertical"
            app:layout_row="0" />

        <SeekBar
            android:id="@+id/margin_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="200"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center_vertical"
            app:layout_row="1" />

        <SeekBar
            android:id="@+id/margin_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="200"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center_vertical"
            app:layout_row="2" />

        <SeekBar
            android:id="@+id/margin_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="200"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center_vertical"
            app:layout_row="3" />

        <SeekBar
            android:id="@+id/margin_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="200"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center_vertical"
            app:layout_row="4" />

        <com.innov8.memegenerator.CustomViews.ColorView
            android:id="@+id/margin_color"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center_vertical"
            app:layout_row="5" />


    </androidx.gridlayout.widget.GridLayout>
</ScrollView>