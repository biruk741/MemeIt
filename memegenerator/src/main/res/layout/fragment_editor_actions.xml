<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_bottom_layout"
        android:text="Layout"
        android:textAllCaps="false"
        android:textColor="@color/editor_actions_drawable_color"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_image_black"
        android:text="Image"
        android:textAllCaps="false"
        android:textColor="@color/editor_actions_drawable_color"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_bottom_text"
        android:text="Text"
        android:textAllCaps="false"
        android:textColor="@color/editor_actions_drawable_color"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_bottom_sticker"
        android:text="Stickers"
        android:textAllCaps="false"
        android:textColor="@color/editor_actions_drawable_color"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_format_paint"
        android:text="Paint"
        android:textAllCaps="false"
        android:textColor="@color/editor_actions_drawable_color"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        app:layout_row="1"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_done_black_24dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/editor_actions_drawable_color"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_gravity="center_vertical"
        app:layout_row="1"
        app:layout_rowWeight="1" />
</android.support.v7.widget.GridLayout>
