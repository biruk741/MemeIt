<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/asf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:tint="#3a3a3a" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.innov8.memeit.CustomClasses.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="the_real_king"
                        android:textColor="#3a3a3a" />

                    <com.innov8.memeit.CustomClasses.FontTextView
                        android:id="@+id/edited_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Edited)"
                        android:textColor="#1968f1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_stars_black_24dp"
                    android:tint="#cb787878" />

                <com.innov8.memeit.CustomClasses.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="24" />
            </LinearLayout>
            <ImageView
                android:id="@+id/sf"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_more_vert_black_24dp"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_height="30dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="#ddd"
            android:src="@drawable/got" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:tint="#3a3a3a" />
                <com.innov8.memeit.CustomClasses.FontTextView
                    android:id="@+id/list_counter"
                    android:layout_width="wrap_content"
                    android:textColor="#3a3a3a"
                    tools:text="362"
                    android:layout_marginLeft="-10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="3dp"
                    android:src="@drawable/like_outline"
                    tools:src="@drawable/like_solid_alt" />

                <com.innov8.memeit.CustomClasses.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1.3k"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="3dp"
                    android:rotation="180"
                    android:src="@drawable/like_outline" />

                <com.innov8.memeit.CustomClasses.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="200"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
