<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@mipmap/many_pics_optimized">

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fontTextView3"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Personalize your account"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/profile_pic" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profile_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/name_setup"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:placeholderImage="@drawable/circle"
        app:roundAsCircle="true"/>

    <EditText
        android:id="@+id/name_setup"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_item_height"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittextlogin"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tags_setup"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <EditText
        android:id="@+id/tags_setup"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_item_height"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edittextlogin"
        android:hint="Tags to Follow"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/hold"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <FrameLayout
        android:id="@+id/hold"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_button_height"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline7">

        <com.innov8.memegenerator.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_outline_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Finish"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="26sp"
            app:finalCornerAngle="35dp"
            app:initialCornerAngle="35dp"
            app:spinning_bar_color="@color/colorAccent"
            app:spinning_bar_padding="0dp"
            app:spinning_bar_width="3dp" />


    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="150dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="52dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="52dp" />

</androidx.constraintlayout.widget.ConstraintLayout>