<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorAccent"
        app:layout_behavior="com.innov8.memeit.CustomClasses.ToolBarBehavior" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:elevation="0dp"
        android:background="#0000">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="John"
            app:titleEnabled="false">


               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_collapseMode="parallax"
                   app:layout_collapseParallaxMultiplier="0.6">

                   <androidx.constraintlayout.widget.Guideline
                       android:id="@+id/guideline3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       app:layout_constraintGuide_begin="150dp" />

                   <com.innov8.memeit.CustomClasses.FontTextView
                       android:id="@+id/profile_follow_btn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="16dp"
                       android:layout_marginRight="16dp"
                       android:background="@drawable/button"
                       android:paddingLeft="16dp"
                       android:paddingTop="8dp"
                       android:paddingRight="16dp"
                       android:paddingBottom="8dp"
                       android:text="Follow"
                       android:textColor="#fff"
                       android:textSize="17sp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="@+id/guideline3" />

                   <LinearLayout
                       android:id="@+id/linearLayout"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginTop="8dp"
                       android:layout_marginEnd="16dp"
                       android:layout_marginRight="16dp"
                       android:layout_marginBottom="8dp"
                       android:gravity="center"
                       android:orientation="horizontal"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintVertical_bias="0.89">

                       <com.innov8.memeit.CustomClasses.FontTextView
                           android:id="@+id/profile_followers_count"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="24k"
                           android:textColor="@color/colorAccent"
                           android:textSize="16sp" />

                       <com.innov8.memeit.CustomClasses.FontTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=" Followers"
                           android:textSize="16sp" />

                       <View
                           android:layout_width="10dp"
                           android:layout_height="10dp"
                           android:layout_gravity="center"
                           android:layout_marginLeft="5dp"
                           android:layout_marginTop="3dp"
                           android:layout_marginRight="5dp"
                           android:alpha="0.8"
                           android:background="@drawable/button"
                           android:backgroundTint="#313131" />

                       <com.innov8.memeit.CustomClasses.FontTextView
                           android:id="@+id/profile_meme_count"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="24"
                           android:textColor="@color/colorAccent"
                           android:textSize="16sp" />

                       <com.innov8.memeit.CustomClasses.FontTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=" Memes"
                           android:textSize="16sp" />

                       <View
                           android:layout_width="10dp"
                           android:layout_height="10dp"
                           android:layout_gravity="center"
                           android:layout_marginLeft="5dp"
                           android:layout_marginTop="3dp"
                           android:layout_marginRight="5dp"
                           android:alpha="0.8"
                           android:background="@drawable/button"
                           android:backgroundTint="#313131" />

                       <com.innov8.memeit.CustomClasses.FontTextView
                           android:id="@+id/profile_badge_count"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="16"
                           android:textColor="@color/colorAccent"
                           android:textSize="16sp" />

                       <com.innov8.memeit.CustomClasses.FontTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=" Badges"
                           android:textSize="16sp" />
                   </LinearLayout>



               </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main.toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#0000"
                app:layout_collapseMode="pin"
                app:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:title="" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <com.kekstudio.dachshundtablayout.DachshundTabLayout
            android:tag="sticky"
            android:id="@+id/tabs_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#fff"
            app:tabGravity="fill"
            app:tabIndicatorColor="#ff5656"
            app:tabMode="fixed"
            app:ddAnimatedIndicator="lineMove"
            app:ddIndicatorColor="#ff5656"
            app:tabSelectedTextColor="#000"
            app:tabTextColor="#5a5a5a" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/profile_viewpager"
        android:layout_width="match_parent"
        android:paddingBottom="50dp"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>




    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_width"
        app:placeholderImage="@drawable/pp_pic"
        app:placeholderImageScaleType="fitXY"
        app:finalHeight="@dimen/image_final_width"
        app:startXPosition="20dp"
        app:startYPosition="150dp"
        app:finalYPosition="28dp"
        app:layout_behavior="com.innov8.memeit.CustomClasses.AvatarImageBehavior"
        app:startHeight="2dp"
        app:startToolbarPosition="2dp"
        app:roundAsCircle="true"
        app:roundingBorderColor="#fff"
        app:roundingBorderWidth="2dp"/>
    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alicia"
        android:textSize="24sp"
        app:ftextsize="16sp"
        app:dscy="150dp"
        app:dfcy="28dp"
        app:margin="16dp"
        app:layout_behavior="com.innov8.memeit.CustomClasses.AvatarNameBehavior"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
