<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_back"
        android:minHeight="?attr/actionBarSize" />

    <com.innov8.memeit.commons.views.ProfileDraweeView
        android:id="@+id/settings_pp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_profile_settings" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/settings_pp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settings_pp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:theme="@style/EditTextStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:counterEnabled="true"
        app:counterMaxLength="70"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_pp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bio/Description"
            android:inputType="textMultiLine"
            android:minHeight="50dp"
            android:maxLength="70"
            android:theme="@style/EditTextStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.innov8.memeit.commons.views.FontTextView
        android:id="@+id/fontTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Profile theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_bio" />

    <ImageButton
        android:id="@+id/orange"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/orange"
        app:layout_constraintEnd_toStartOf="@+id/red"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView2" />

    <ImageButton
        android:id="@+id/red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/red"
        app:layout_constraintEnd_toStartOf="@+id/blue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/orange"
        app:layout_constraintTop_toTopOf="@+id/orange" />

    <ImageButton
        android:id="@+id/blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/blue"
        app:layout_constraintEnd_toStartOf="@+id/purple"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="@+id/orange" />

    <ImageButton
        android:id="@+id/purple"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintTop_toTopOf="@+id/orange" />

    <ImageButton
        android:id="@+id/green"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/greeny"
        app:layout_constraintEnd_toStartOf="@+id/golden"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <ImageButton
        android:id="@+id/golden"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/golden"
        app:layout_constraintEnd_toStartOf="@+id/black"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <ImageButton
        android:id="@+id/black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/pink"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/golden"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <ImageButton
        android:id="@+id/pink"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:src="@drawable/circle"
        android:tint="@color/pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/black"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

</androidx.constraintlayout.widget.ConstraintLayout>