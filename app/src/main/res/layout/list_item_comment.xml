<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:padding="14dp"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_poster_pp"
        android:layout_width="@dimen/profile_mini_size"
        android:layout_height="@dimen/profile_mini_size"
        android:padding="4dp"
        fresco:placeholderImage="@drawable/circle"
        fresco:roundAsCircle="true" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.innov8.memeit.CustomClasses.FontTextView
                android:id="@+id/list_name"
                android:layout_marginLeft="10dp"
                tools:text = "da_king"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <com.innov8.memeit.CustomClasses.FontTextView
                android:id="@+id/list_item_date"
                android:text="2h ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.innov8.memeit.CustomClasses.FontTextView
            android:id="@+id/list_comment"
            android:layout_marginLeft="10dp"
            tools:text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam."
            android:paddingTop="2dp"
            android:textColor="#3a3a3a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>