<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:src="@drawable/gradient_1"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/memeitlogo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:src="@drawable/app_text_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Your window to the world of memes."
        android:textColor="#fff"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/memeitlogo" />


</androidx.constraintlayout.widget.ConstraintLayout>