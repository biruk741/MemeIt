<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#eee"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drawer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_black_24dp" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_button"
        app:layout_constraintStart_toEndOf="@+id/drawer_button"
        app:layout_constraintTop_toTopOf="@+id/drawer_button" />

    <ImageView
        android:id="@+id/bring_up_search_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_action_action_search"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/drawer_button" />

    <ImageView
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_button"
        app:layout_constraintEnd_toStartOf="@+id/bring_up_search_bar"
        app:layout_constraintTop_toTopOf="@+id/drawer_button"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />


    <com.innov8.memeit.CustomClasses.FontEditText
        android:id="@+id/search_query"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/search_outline"
        android:hint="Search memes or tags"
        android:paddingLeft="40dp"
        android:textColorHint="#9f9f9f"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/drawer_button" />

    <ImageView
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:src="@drawable/ic_action_action_search"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/search_query"
        app:layout_constraintEnd_toEndOf="@+id/search_query"
        app:layout_constraintTop_toTopOf="@+id/search_query" />


    <ImageView
        android:id="@+id/close_searchbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:tint="#000"
        app:layout_constraintBottom_toBottomOf="@+id/search_query"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_clear_black_24dp" />

    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/search_loading"
        style="@style/SpinKitView.Large.FadingCircle"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/search_query"
        app:layout_constraintEnd_toStartOf="@+id/search_button"
        app:layout_constraintTop_toTopOf="@+id/search_query" />

    <com.pchmn.materialchips.ChipsInput
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:chip_backgroundColor="#dedede"
        app:chip_deletable="true"
        app:chip_deleteIconColor="#313131"
        app:hint="Enter tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:chip_hasAvatarIcon="false"
        app:chip_labelColor="#313131"
        app:layout_constraintTop_toBottomOf="@id/search_query"
        app:maxRows="3"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/searchbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="search_button,search_query,close_searchbar"
        tools:visibility="visible"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_suggestions"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tags"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>