<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AboutActivity">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.AboutActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/many_pics_optimized"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:src="@drawable/app_text"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Innov8 Apps"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="185dp"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@+id/back"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView4">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="185dp"
        android:layout_height="170dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView4" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biruk Abraham"
        android:textColor="#313131"
        android:textSize="18sp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haileyesus Shitalem"
        android:textColor="#313131"
        android:textSize="18sp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/me"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@+id/cardview"
        app:layout_constraintEnd_toEndOf="@+id/cardview"
        app:layout_constraintStart_toStartOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="@+id/cardview" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/jv"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birukabraham741@gmail.com"
        android:textSize="12dp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView5" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birukabraham741@gmail.com"
        android:textSize="12dp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/fontTextView6"
        app:layout_constraintStart_toStartOf="@+id/fontTextView6"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView6" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView8"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/ic_phone_black_24dp"
        android:gravity="center"
        android:text="Call"
        android:translationZ="2dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView9" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/email_biruk"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/ic_email_black_24dp"
        android:gravity="center"
        android:text="Email"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView9" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/call_biruk"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/ic_phone_black_24dp"
        android:gravity="center"
        android:text="Call"
        android:translationZ="2dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView9" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/call_jv"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/ic_phone_black_24dp"
        android:gravity="center"
        android:text="Call"
        android:translationZ="2dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView7" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/email_jv"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/ic_email_black_24dp"
        android:gravity="center"
        android:text="Email"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/fontTextView7" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/feedback_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_send_black_36dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/colorAccent"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Send us feedback"
        android:textColor="#313131"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview" />

    <View
        android:id="@+id/vi"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="64dp"
        android:background="#1d000000"
        app:layout_constraintTop_toBottomOf="@+id/feedback_message" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_favorite_black_36dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/colorAccent"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Donate"
        android:textColor="#313131"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vi" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>