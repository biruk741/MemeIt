<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <com.innov8.memeit.CustomViews.ProfileDraweeView
        android:id="@+id/comment_poster_pp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@mipmap/icon" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textColor="#313131"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/list_item_date"
        app:layout_constraintStart_toEndOf="@+id/comment_poster_pp"
        app:layout_constraintTop_toTopOf="@+id/comment_poster_pp"
        tools:text="Benedict Cumberbatch" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/list_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_name"
        app:layout_constraintTop_toBottomOf="@+id/list_name"
        tools:text="Lorem ipsum dor amet voic isfa mptna elcampreo matine fa mptna elcampreo matine fa mptna elcampreo matine fa mptna elcampreo matine" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2 hours ago" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/like_comment"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="@color/like_bg"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/dislike_comment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/list_comment"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        tools:text="24k" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/dislike_comment"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_thumb_down_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="#99000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/share_comment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/like_comment"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        tools:text="24k" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/share_comment"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_share_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="#99000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/edit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dislike_comment"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        tools:text="24k" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:tint="#99000000"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/share_comment"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:tint="#99000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/own_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="edit,delete"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>