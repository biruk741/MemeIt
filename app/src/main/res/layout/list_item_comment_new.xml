<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_poster_pp"
        android:layout_width="@dimen/profile_mini_size"
        android:layout_height="@dimen/profile_mini_size"
        android:layout_marginStart="16dp"
        tools:background="@mipmap/icon"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:textColor="#313131"
        app:layout_constraintEnd_toStartOf="@id/list_item_date"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/comment_poster_pp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Benedict Cumberbatch" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/list_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_name"
        app:layout_constraintTop_toBottomOf="@+id/list_name"
        tools:text="Lorem ipsum dor amet voic isfa mptna elcampreo matine fa mptna elcampreo matine fa mptna elcampreo matine fa mptna elcampreo matine" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
       android:id="@+id/list_item_date"
        app:layout_constraintBottom_toBottomOf="@+id/list_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2 hours ago" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView14"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="#99000000"
        app:layout_constraintStart_toStartOf="@+id/list_comment"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        tools:text="24k" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView16"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:drawableTint="#99000000"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_thumb_down_black_24dp"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toEndOf="@+id/fontTextView14"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        tools:text="24k" />

    <com.innov8.memeit.CustomClasses.FontTextView
        android:id="@+id/fontTextView17"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:drawableTint="#99000000"
        android:drawableLeft="@drawable/ic_share_black_24dp"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toEndOf="@+id/fontTextView16"
        app:layout_constraintTop_toBottomOf="@+id/list_comment"
        tools:text="24k" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp"
        android:tint="#99000000"
        app:layout_constraintStart_toEndOf="@+id/fontTextView17"
        app:layout_constraintTop_toBottomOf="@+id/list_comment" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:tint="#99000000"
        app:layout_constraintStart_toEndOf="@id/edit"
        app:layout_constraintTop_toBottomOf="@+id/list_comment" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/own_comment"
        android:layout_width="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="edit,delete" />

</androidx.constraintlayout.widget.ConstraintLayout>