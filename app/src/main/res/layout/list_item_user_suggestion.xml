<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/suggestion_pp1"
        layout="@layout/profile_img_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/suggestion_pp2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/suggestion_pp2"
        layout="@layout/profile_img_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/suggestion_pp3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/suggestion_pp1"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/suggestion_pp3"
        layout="@layout/profile_img_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/suggestion_pp4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/suggestion_pp2"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/suggestion_pp4"
        layout="@layout/profile_img_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/suggestion_pp3"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/suggestion_follow_btn1"
        layout="@layout/follow_btn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/suggestion_pp1"
        app:layout_constraintStart_toStartOf="@+id/suggestion_pp1"
        app:layout_constraintTop_toBottomOf="@+id/suggestion_pp1" />

    <include
        android:id="@+id/suggestion_follow_btn2"
        layout="@layout/follow_btn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/suggestion_pp2"
        app:layout_constraintStart_toStartOf="@+id/suggestion_pp2"
        app:layout_constraintTop_toBottomOf="@+id/suggestion_pp2" />

    <include
        android:id="@+id/suggestion_follow_btn3"
        layout="@layout/follow_btn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/suggestion_pp3"
        app:layout_constraintStart_toStartOf="@+id/suggestion_pp3"
        app:layout_constraintTop_toBottomOf="@+id/suggestion_pp3" />

    <include
        android:id="@+id/suggestion_follow_btn4"
        layout="@layout/follow_btn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/suggestion_pp4"
        app:layout_constraintStart_toStartOf="@+id/suggestion_pp4"
        app:layout_constraintTop_toBottomOf="@+id/suggestion_pp4" />


</androidx.constraintlayout.widget.ConstraintLayout>