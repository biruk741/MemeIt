<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/follower_list_height"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/follower_poster_pp"
        android:layout_width="@dimen/profile_mini_size"
        android:layout_height="@dimen/profile_mini_size"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="0dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/circle"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Jv"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/follower_poster_pp"
        app:layout_constraintTop_toTopOf="@+id/follower_poster_pp" />

    <TextView
        android:id="@+id/follower_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="3.4k posts"
        app:layout_constraintLeft_toLeftOf="@+id/follower_name"
        app:layout_constraintTop_toBottomOf="@+id/follower_name" />

    <com.innov8.memegenerator.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/follower_follow_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_follow_back"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Follow"
        android:textColor="@color/colorAccent"
        app:spinning_bar_color="@color/colorAccent"
        app:spinning_bar_width="3dp"
        app:spinning_bar_padding="0dp"
        app:finalCornerAngle="20dp"
        app:initialCornerAngle="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>