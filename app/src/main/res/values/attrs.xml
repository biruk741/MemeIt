<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomNavigation">
        <attr name="menu" format="reference" />
        <attr name="skip_tint" format="integer" />
        <attr name="selected_tint" format="color" />
        <attr name="deselected_tint" format="color" />
        <attr name="item_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CountView">
        <attr name="radius" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="backColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="choosed" format="boolean" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="MyRecyclerView">
        <attr name="emptyDrawable" format="reference" />
        <attr name="errorDrawable" format="reference" />
        <attr name="emptyDescription" format="string" />
        <attr name="errorDescription" format="string" />
        <attr name="emptyAction" format="string" />
        <attr name="errorAction" format="string" />
    </declare-styleable>

</resources>